MODULE cust_screen OUTPUT.

  LOOP AT  SCREEN.
    IF screen-name = 'BUT_PRINT'.
        IF up_mode = 'U'.
          screen-INVISIBLE = '0'.
        ELSEIF up_mode = 'I'.
          screen-INVISIBLE = '1'.
       ENDIF.
       MODIFY SCREEN.
    ENDIF.
  ENDLOOP.


ENDMODULE.

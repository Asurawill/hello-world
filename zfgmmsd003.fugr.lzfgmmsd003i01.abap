*&      Module  SN_CRATE_END  INPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE sn_crate_end INPUT.
*  CLEAR wa_zmm001.
ENDMODULE.
*&---------------------------------------------------------------------*
*&      Module  CREAT_DATE  INPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE creat_date INPUT.
  IF STATUS = 'EALX' or  STATUS = 'ECLX' .
    ZMM001-CRTBY = sy-uname.
    ZMM001-CRTDT = sy-datum.
  endif.
ENDMODULE.
*&---------------------------------------------------------------------*
*&      Module  CHANGE_DATE  INPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE change_date INPUT.
  IF STATUS = 'EULG'.

    ZMM001-CHGBY = sy-uname.
    ZMM001-CHGDT = sy-datum.
  endif.
ENDMODULE.
*&---------------------------------------------------------------------*
*&      Module  GET_IT_ZMM001  INPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE get_it_zmm001 INPUT.
  CLEAR:wa_zmm001, it_zmm001[].
  LOOP AT TOTAL.
    wa_zmm001 = TOTAL.
    append wa_zmm001 to it_zmm001.
  ENDLOOP.
ENDMODULE.

MODULE sn_crate INPUT.

IF STATUS = 'EALX' or  STATUS = 'ECLX' .
  SORT it_zmm001[] by sn DESCENDING.
  IF g_sn = ''.
  READ TABLE it_zmm001 INTO wa_zmm001 INDEX 1.
  g_sn = wa_zmm001-sn.
  ENDIF.
  zmm001-sn = g_sn + EXIND.

ENDIF.
endmodule.
